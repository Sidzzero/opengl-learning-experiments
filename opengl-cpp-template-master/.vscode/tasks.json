{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "-L./Header/shader.h",
               // "src/*.cpp",
                "src/glad.c",
               // "-lglfw3dll",
                "libglfw.3.dylib",
                "${file}",
                "-o",
                "${workspaceFolder}/myprogram.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}